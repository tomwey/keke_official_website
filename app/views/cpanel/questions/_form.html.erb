<%= simple_form_for([:cpanel,@question], :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', :target => @question %>
  <fieldset>
    <legend><%= legend %></legend>
    <%= f.input :title, :label => "问题", :input_html => { :class => "span6"} %>
    <%= f.input :reply, :label => "回复", :input_html => { :class => "span6", :rows => 10 } %>
    <div class="form-actions">
      <%= f.submit "保存", :class => "btn btn-primary", 'data-disable-with' => "正在保存..." %>
      <a href="<%= cpanel_twits_path %>" class="btn">取消</a>
    </div>
  </fieldset>
<% end %>

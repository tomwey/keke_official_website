<%= simple_form_for([:cpanel,@twit], :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', :target => @twit %>
  <fieldset>
    <legend><%= legend %></legend>
    <%= f.input :content, :as => :text, :label => "推送内容", :input_html => { :class => "span6", :rows => 8 } %>
    <%= f.input :badge, :label => "Badge" %>
    <%= f.input :app_platform_id, :label => "所属应用", :collection => AppPlatform.all.map { |app| [app.app_platform_and_name, app.id] }, :prompt => "--选择所属的应用名--" %>
    <%= f.input :sound, :label => "提示音" %>
    <%= f.input :is_debug, as: :boolean, :inline_label => "是否以开发者模式推送", :label => false %>
    <div class="form-actions">
      <%= f.submit "保存", :class => "btn btn-primary", 'data-disable-with' => "正在保存..." %>
      <a href="<%= cpanel_twits_path %>" class="btn">取消</a>
    </div>
  </fieldset>
<% end %>
